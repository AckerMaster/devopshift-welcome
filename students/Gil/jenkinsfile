pipeline {
    agent any

    stages {
        stage('Git Clone') {
            steps {
                git url: 'http://github.com/yanivomc/devopshift-welcome.git', branch: '/elbit/jenkinsdec26'
            }
        }

        stage('Build') {
            steps {
                echo "javac"
            }
        }
    
        stage('Parallel Tasks') {
            parallel {
                stage('Unit Test') {
                    steps {
                        echo "Unit Test"
                    }
                }
                stage('Integration Test') {
                    steps {
                        echo "Integration Test"
                    }
                }                
            }
        }
    }

    post {
        always {
            echo 'This will always run regardless of the result.'
        }
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}