pipeline {
    agent any

    environment {
        CREDENTIALS_ID = '{{ credentials_id }}'
        K8S_ENDPOINT_URL = '{{ k8s_endpoint_url }}'
        DATABASE_ENDPOINT = '{{ database_endpoint }}'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building application...'
                echo "Using credentials ID: ${CREDENTIALS_ID}"
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                echo "Connecting to Kubernetes at: ${K8S_ENDPOINT_URL}"
                echo "Connecting to database at: ${DATABASE_ENDPOINT}"
            }
        }
    }
}