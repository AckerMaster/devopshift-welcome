pipeline {
    agent any

    environment {
        IMAGE_NAME = 'my-docker-image'
        VERSION = "v${env.BUILD_NUMBER}"
        REPO = 'my-docker-repo'
        CREDENTIALS_ID = 'docker-credentials'
    }

    tools {
        nodejs 'NodeJS11' // Name of the NodeJS installation in Jenkins global configuration
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/yanivomc/docker-cicd'
            }
        }

        stage('Build') {
            steps {
                script {
                        sh '''
                        cd ./basics
                        npm install
                        echo "docker build --target build --tag ${IMAGE_NAME}:${VERSION}-build ."
                        '''
                    }
                }
            }
        

        stage('Test') {
            steps {
                script {
                    sh '''
                    echo "docker build --target test --tag ${IMAGE_NAME}:${VERSION}-test ."
                    echo "docker run --rm ${IMAGE_NAME}:${VERSION}-test"
                    '''
                }
            }
        }

        stage('Run') {
            steps {
                script {
                    sh '''
                    echo "docker build --target run --tag ${IMAGE_NAME}:${VERSION} ."
                    '''
                }
            }
        }

        // stage('Push') {
        //     steps {
        //         script {
        //             docker.withRegistry("https://index.docker.io/v1/", "${CREDENTIALS_ID}") {
        //                 sh '''
        //                 echo "docker push ${REPO}/${IMAGE_NAME}:${VERSION}"
        //                 echo "docker tag ${REPO}/${IMAGE_NAME}:${VERSION} ${REPO}/${IMAGE_NAME}:latest"
        //                 echo "docker push ${REPO}/${IMAGE_NAME}:latest"
        //                 '''
        //             }
        //         }
        //     }
        // }
    }

    post {
        always {
            echo "running clean"
        }
        success {
            echo 'Docker image build, test, and push successful!'
        }
        failure {
            echo 'Docker image build, test, or push failed.'
        }
    }
}
